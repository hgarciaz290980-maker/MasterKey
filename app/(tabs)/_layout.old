const COLORS = {
    deepMidnight: '#040740',
    electricBlue: '#303AF2',
    darkSlate: '#172140',
    textWhite: '#F8F9FA'
};

function CustomDrawerContent(props: any) {
  const router = useRouter();
  
  return (
    <DrawerContentScrollView {...props} contentContainerStyle={{ flex: 1, backgroundColor: COLORS.deepMidnight }}>
      <View style={styles.drawerHeader}>
        {/* Cambio a MaterialIcons para que reconozca 'fingerprint' */}
        <MaterialIcons name="fingerprint" size={55} color={COLORS.electricBlue} />
        <Text style={styles.drawerTitle}>Bunker-K</Text>
        <Text style={styles.drawerSubtitle}>Acceso Biométrico</Text>
      </View>

      <View style={styles.separator} />

      <DrawerItem
        label="Inicio"
        labelStyle={styles.drawerLabel}
        icon={({ color, size }) => <Ionicons name="home-outline" size={size} color={color} />}
        onPress={() => router.push('/')}
        inactiveTintColor={COLORS.textWhite}
      />

      <View style={styles.separator} />

      <DrawerItem
        label="Seguridad y Llaves"
        labelStyle={styles.drawerLabel}
        icon={({ color, size }) => <Ionicons name="key-outline" size={size} color={color} />}
        onPress={() => {}}
        inactiveTintColor={COLORS.textWhite}
      />

      <View style={styles.separator} />

      <DrawerItem
        label="Configuración"
        labelStyle={styles.drawerLabel}
        icon={({ color, size }) => <Ionicons name="settings-outline" size={size} color={color} />}
        onPress={() => {}}
        inactiveTintColor={COLORS.textWhite}
      />

      <View style={styles.footer}>
        <Text style={styles.manifestoText}>
          "Tu propio territorio digital, blindado por ti y para ti."
        </Text>
      </View>
    </DrawerContentScrollView>
  );
}

export default function RootLayout() {
  const router = useRouter();

  useEffect(() => {
    async function setupNotifications() {
      if (Platform.OS === 'web') return;
      try {
        const { status: existingStatus } = await Notifications.getPermissionsAsync();
        let finalStatus = existingStatus;
        if (existingStatus !== 'granted') {
          const { status } = await Notifications.requestPermissionsAsync();
          finalStatus = status;
        }
        if (finalStatus !== 'granted') return;
        if (Platform.OS === 'android') {
          await Notifications.setNotificationChannelAsync('default', {
            name: 'Bunker-K Alerts',
            importance: Notifications.AndroidImportance.MAX,
            vibrationPattern: [0, 250, 250, 250],
            lightColor: '#303AF2',
          });
        }
      } catch (error) {
        console.log("Error configurando notificaciones:", error);
      }
    }
    setupNotifications();
  }, []);

  return (
    <SafeAreaProvider>
      <GestureHandlerRootView style={{ flex: 1 }}>
        <Drawer
          drawerContent={(props) => <CustomDrawerContent {...props} />}
          screenOptions={{
            drawerPosition: 'right',
            headerShown: false,
            drawerStyle: { 
              backgroundColor: COLORS.deepMidnight, 
              width: 280 
            },
            drawerActiveTintColor: COLORS.electricBlue,
            drawerInactiveTintColor: COLORS.textWhite,
          }}
        >
          <Drawer.Screen name="index" options={{ drawerLabel: 'Inicio' }} />
        </Drawer>
      </GestureHandlerRootView>
    </SafeAreaProvider>
  );
}

